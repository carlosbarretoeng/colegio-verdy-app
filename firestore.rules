rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn()
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isTeacher() {
      return isSignedIn()
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    function isParent() {
      return isSignedIn()
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'parent';
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();

      allow create: if isOwner(userId)
                    && request.resource.data.uid == request.auth.uid
                    && request.resource.data.role == 'parent'
                    || isAdmin();

      allow update: if isOwner(userId)
                    && request.resource.data.uid == resource.data.uid
                    && request.resource.data.role == resource.data.role
                    || isAdmin()
                    && request.resource.data.uid == resource.data.uid;

      allow delete: if false;
    }

    match /classrooms/{classroomId} {
      allow read: if isAdmin() || (isTeacher() && resource.data.professorId == request.auth.uid) || isParent();
      allow write: if isAdmin();
    }

    match /students/{studentId} {
      allow read: if isAdmin()
                  || (isTeacher()
                      && resource.data.turmaId is string
                      && exists(/databases/$(database)/documents/classrooms/$(resource.data.turmaId))
                      && get(/databases/$(database)/documents/classrooms/$(resource.data.turmaId)).data.professorId == request.auth.uid)
                  || (isSignedIn()
                      && request.auth.uid in resource.data.responsaveisIds);

      allow update: if isAdmin()
                    || (isTeacher()
                        && resource.data.turmaId is string
                        && exists(/databases/$(database)/documents/classrooms/$(resource.data.turmaId))
                        && get(/databases/$(database)/documents/classrooms/$(resource.data.turmaId)).data.professorId == request.auth.uid
                        && request.resource.data.diff(resource.data).changedKeys().hasOnly(['cadernetaStatus']));

      allow create, delete: if isAdmin();
    }

    match /events/{eventId} {
      allow read: if isAdmin() || isSignedIn();
      allow write: if isAdmin();
    }

    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn()
                    && request.resource.data.uid == request.auth.uid
                    && request.resource.data.email is string;
      allow update: if isAdmin()
                    || (isSignedIn()
                        && resource.data.uid == request.auth.uid
                        && request.resource.data.uid == request.auth.uid
                        && request.resource.data.email is string);
      allow delete: if isAdmin();
    }

    match /cadernetaEntries/{entryId} {
      allow read: if isAdmin() || isTeacher() || isSignedIn();
      
      allow create, update: if isAdmin()
                            || (isTeacher()
                                && request.resource.data.turmaId is string
                                && exists(/databases/$(database)/documents/classrooms/$(request.resource.data.turmaId))
                                && get(/databases/$(database)/documents/classrooms/$(request.resource.data.turmaId)).data.professorId == request.auth.uid);
      
      allow delete: if false;
    }

    match /merendaSemanal/{docId} {
      allow read: if isSignedIn();
      allow create, update: if isAdmin();
      allow delete: if false;
    }

    match /feedback/{docId} {
      // Qualquer usuário autenticado pode enviar; cada um lê apenas as próprias mensagens; admin lê tudo.
      allow read: if isAdmin() || (isSignedIn() && resource.data.uid == request.auth.uid);
      allow create: if isSignedIn()
                    && request.resource.data.uid == request.auth.uid
                    && request.resource.data.mensagem is string
                    && request.resource.data.criadoEm == request.time;
      allow update: if isAdmin(); // apenas admin pode marcar como 'lido'
      allow delete: if false;
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
